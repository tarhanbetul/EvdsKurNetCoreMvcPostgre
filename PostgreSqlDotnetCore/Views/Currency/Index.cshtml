@using PostgreSqlDotnetCore.Models.Evds;
@model List<ParaBirimi>;

<div class="row">
    <div class="col-md-12">
        <div class="col-md-12" style="margin-bottom:10px">
           
            <div class="col-md-3" style="float:right;margin-bottom:10px"><a style="float:right" class="btn btn-success" asp-controller="Currency" asp-action="Create">New Currency</a></div>
        </div>
        <div class="col-md-12" style="margin-top: 46px;">

            <table class="table table-hover table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Currency Name</th>
                        <th scope="col">Currency Country</th>
                        <th scope="col">Currency Content</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@item.Name</td>
                            <td>@item.Country</td>
                            <td>@item.Content</td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>


